<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
   <servlet>
        <servlet-name>SystemServiceServlet</servlet-name>
        <servlet-class>com.google.api.server.spi.SystemServiceServlet</servlet-class>
        <init-param>
            <param-name>services</param-name>
            <param-value>com.mulesoft.arc.arcdatastore.backend.Analytics</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>SystemServiceServlet</servlet-name>
        <url-pattern>/_ah/spi/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>analytics-api</servlet-name>
        <servlet-class>com.mulesoft.arc.arcdatastore.backend.AnalyticsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>analytics-api</servlet-name>
        <url-pattern>/analytics/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>letsencrypt-check</servlet-name>
        <servlet-class>com.mulesoft.arc.arcdatastore.backend.LetsEncrypt</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>letsencrypt-check</servlet-name>
        <url-pattern>/.well-known/acme-challenge/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>tasks-api</servlet-name>
        <servlet-class>com.mulesoft.arc.arcdatastore.backend.TasksServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>tasks-api</servlet-name>
        <url-pattern>/tasks/*</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>generating-random-data-for-testing</web-resource-name>
            <url-pattern>/analytics/random</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>